            validationRules: [{ type: "required", message: "[Nama PE] harus dipilih" }]
        })
    });

    $(window).on('load', function () {
        $("#ModalSimpanPenggunaanData").modal("show");
    });

    $("#btnSavePenggunaanData").click(function () {
        let penggunaandataid = $("#penggunaandataid").dxSelectBox("instance").option("value");

        if (penggunaandataid == null) {
            alert("Silahkan Pilih Tujuan Penggunaan Data");
            return false;
        } else {
            $.ajax({
                url: '@Url.Action("SimpanPenggunaanData", "PembiayaanVSJaminanSaham")',
                data: { id: penggunaandataid },
                dataType: "json",
                type: "POST",
                success: function (data) {
                    if (data.success == true) {
                        //alert(data.message);
    @* waitingDialog.hide(); *@
                            $('#ModalSimpanPenggunaanData').modal('hide');
                        return "Saving Success !";
                    }
                    else if (data.success == false) {
    @*  waitingDialog.hide(); *@
                            alert(data.message);
                        $('#ModalSimpanPenggunaanData').modal('hide');
                        return "Saving Failed !";
                    }
                }
            });
        }
    });

    function onSelectionChanged(e) {
        if (e.addedItems.length > 0) {
            e.component.field().val(""); // Clears the search text. However, search filter is only applied to the widget after focus is lost in the input element
        }
    }

    function onButtonFilterClicked(e) {
        const res = e.validationGroup.validate();
        if (res.status === "valid") {
            var tempPeriodeAwal = $("#PeriodeAwal").dxDateBox("instance").option("value");
            var namaPE = $("#namaPEid").dxSelectBox("instance").option("value");
            var periodeAwal = tempPeriodeAwal.getFullYear() + '-' + String(tempPeriodeAwal.getMonth() + 1).padStart(2, '0') + '-' + String(tempPeriodeAwal.getDate()).padStart(2, '0');

            var grid1 = $("#gridEfekRepo").dxDataGrid("instance");
            var ds1 = DevExpress.data.AspNet.createStore({
                loadMethod: "GET",
                loadMode: "processed",
                loadUrl: '@Url.Action("getGridEfekRepo")?periode=' + periodeAwal + '&pe=' + namaPE
            });
            grid1.option('dataSource', ds1);

            var grid2 = $("#gridJaminanMargin").dxDataGrid("instance");
            var ds2 = DevExpress.data.AspNet.createStore({
                loadMethod: "GET",
                loadMode: "processed",
                loadUrl: '@Url.Action("getGridJaminanMargin")?periode=' + periodeAwal + '&pe=' + namaPE
            });
            grid2.option('dataSource', ds2);
        }
    }

    function ExportToExcel() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("LogExportIndex", "PembiayaanVSJaminanSaham")",
            success: function (response) {
                if (response.result == "Success") {
                    var workbook = new ExcelJS.Workbook();
                    var worksheet1 = workbook.addWorksheet('NP Reverse Repo');
                    var worksheet2 = workbook.addWorksheet('NP Margin');
                    var worksheet3 = workbook.addWorksheet('Efek Repo');
                    var worksheet4 = workbook.addWorksheet('Jaminan Margin');

                    DevExpress.excelExporter.exportDataGrid({
                        component: $("#gridNilaiPembiayaanRR").dxDataGrid("instance"),
                        worksheet: worksheet1,
                        customizeCell: function (options) {
                            var { gridCell, excelCell } = options;

                            if (gridCell.rowType === 'data') {
                                if (options.gridCell.column.dataType === 'number') {
                                    excelCell.numFmt = '#,##0';
                                }
                            }
                        }
                    }).then(() => DevExpress.excelExporter.exportDataGrid({
                        component: $("#gridNilaiPembiayaanM").dxDataGrid("instance"),
                        worksheet: worksheet2,
                        customizeCell: function (options) {
                            var { gridCell, excelCell } = options;

                            if (gridCell.rowType === 'data') {
                                if (options.gridCell.column.dataType === 'number') {
                                    excelCell.numFmt = '#,##0';
                                }
                            }
                        }
                    })).then(() => DevExpress.excelExporter.exportDataGrid({
                        component: $("#gridEfekRepo").dxDataGrid("instance"),
                        worksheet: worksheet3,
                        customizeCell: function (options) {
                            var { gridCell, excelCell } = options;

                            if (gridCell.rowType === 'data') {
                                if (options.gridCell.column.dataType === 'number') {
                                    excelCell.numFmt = '#,##0';
                                }
                            }
                        }
                    })).then(() => DevExpress.excelExporter.exportDataGrid({
                        component: $("#gridJaminanMargin").dxDataGrid("instance"),
                        worksheet: worksheet4,
                        customizeCell: function (options) {
                            var { gridCell, excelCell } = options;

                            if (gridCell.rowType === 'data') {
                                if (options.gridCell.column.dataType === 'number') {
                                    excelCell.numFmt = '#,##0';
                                }
                            }
                        }
                    })).then(function () {
                        workbook.xlsx.writeBuffer().then(function (buffer) {
                            saveAs(new Blob([buffer], { type: "application/octet-stream" }), "PembiayaanVSJaminanSaham_" + new Date().toISOString().slice(0, 10) + ".xlsx");
                        });
                    });
                }
            }
        });
    }

    function ExportToPdf() {
        var dataGrid = $("#gridNilaiPembiayaanRR").dxDataGrid("instance");
        dataGrid.option("onExporting", function (e) { });
        dataGrid.option("onFileSaving", function (e) {
            var fd = new FormData();
            fd.append("file", e.data);
            $.ajax({
                type: "POST",
                url: "@Url.Action("LogExportPDFIndex", "PembiayaanVSJaminanSaham")",
                data: { file: fd, name: 'NP Reverse Repo' },
                processData: false,
                contentType: false
            }).done(function (data) {
                window.location = "@Url.Action("FileIndex", "PembiayaanVSJaminanSaham")"
            });
            e.cancel = true;
        });

        var dataGrid2 = $("#gridNilaiPembiayaanM").dxDataGrid("instance");
