    // Helper function for direct PDF download
    function exportGridToPDFDirect(gridId, name) {
        return new Promise((resolve, reject) => {
            console.log(`Starting direct PDF export for ${gridId} - ${name}`);

            var dataGrid = $("#" + gridId).dxDataGrid("instance");

            if (!dataGrid) {
                const error = `${name} grid not found or not initialized.`;
                alert(error);
                reject(error);
                return;
            }

            // Check if grid has data
            const dataSource = dataGrid.getDataSource();
            if (!dataSource || !dataSource.items() || dataSource.items().length === 0) {
                const error = `${name} grid has no data to export. Please apply filters first.`;
                alert(error);
                reject(error);
                return;
            }

            console.log(`${name} grid has ${dataSource.items().length} items to export`);

            dataGrid.option("onExporting", function (e) {
                console.log(`${name} grid exporting...`);
            });

            dataGrid.option("onFileSaving", function (e) {
                console.log(`${name} grid file saving...`);

                var fd = new FormData();
                fd.append("file", e.data);
                fd.append("name", name);

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("ExportSTPPDFDirect", "MarketDriven")",
                    data: fd,
                    processData: false,
                    contentType: false,
                    xhrFields: {
                        responseType: 'blob' // Important for file download
                    }
                }).done(function (data, status, xhr) {
                    console.log(`${name} PDF generated successfully`);

                    // Create a blob URL and trigger download
                    const blob = new Blob([data], { type: 'application/pdf' });
                    const url = window.URL.createObjectURL(blob);

                    // Get the filename from the response header or create a default one
                    const contentDisposition = xhr.getResponseHeader('Content-Disposition');
                    let filename = `STP_${name}_${new Date().toISOString().slice(0, 10)}.pdf`;

                    if (contentDisposition) {
                        const filenameMatch = contentDisposition.match(/filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/);
                        if (filenameMatch && filenameMatch[1]) {
                            filename = filenameMatch[1].replace(/['"]/g, '');
                        }
                    }

                    // Create download link and trigger download
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();

                    // Clean up
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);

                    console.log(`${name} PDF download triggered`);
                    resolve();

                }).fail(function (xhr, status, error) {
                    console.error(`${name} PDF export failed:`, error);
                    console.error("Response:", xhr.responseText);

                    let errorMessage = `Failed to export ${name} PDF: ${error}`;
                    if (xhr.responseText) {
                        try {
                            const errorObj = JSON.parse(xhr.responseText);
                            errorMessage = `Failed to export ${name} PDF: ${errorObj.message || error}`;
                        } catch (e) {
                            errorMessage = `Failed to export ${name} PDF: ${xhr.responseText}`;
                        }
                    }

                    alert(errorMessage);
                    reject(errorMessage);
                });

                e.cancel = true;
            });

            // Trigger the export
            dataGrid.exportToExcel();
        });
    }
