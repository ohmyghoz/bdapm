    function exportGridToPDFServerSide(gridId, name) {
        return new Promise((resolve, reject) => {
            console.log(`Starting server-side PDF export for ${gridId} - ${name}`);

            var dataGrid = $("#" + gridId).dxDataGrid("instance");

            if (!dataGrid) {
                const error = `${name} grid not found or not initialized.`;
                alert(error);
                reject(error);
                return;
            }

            dataGrid.option("onExporting", function (e) {
                console.log(`${name} grid exporting...`);
            });

            dataGrid.option("onFileSaving", function (e) {
                console.log(`${name} grid file saving to server...`);

                var fd = new FormData();
                fd.append("file", e.data);
                fd.append("name", name);

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("ExportSTPPDFServerSide", "MarketDriven")",
                    data: fd,
                    processData: false,
                    contentType: false
                }).done(function (data) {
                    console.log(`${name} upload response:`, data);

                    if (data.result === "Success") {
                        // Download the file
                        window.open("@Url.Action("DownloadSTPPDF", "MarketDriven")?name=" + name, "_blank");
                        resolve();
                    } else {
                        alert(`Error processing ${name} PDF: ` + data.message);
                        reject(data.message);
                    }
                }).fail(function (xhr, status, error) {
                    console.error(`${name} PDF upload failed:`, error);
                    alert(`Failed to upload ${name} PDF: ` + error);
                    reject(error);
                });

                e.cancel = true;
            });

            dataGrid.exportToExcel();
        });
    }

