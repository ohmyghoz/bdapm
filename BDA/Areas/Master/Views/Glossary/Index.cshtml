@{
    Layout = "~/Views/Shared/_LayoutMainMetronic.cshtml";
}

<script type="text/javascript">
    function Edit() {
        var keys = $("#grid1").dxDataGrid("getSelectedRowKeys");
        if (keys.length >= 1) {
            window.location = "@Url.Action("Edit","Glossary")/" + keys[0].toString();
        } else {
            swal({ type: 'error', title: 'Oops...', text: 'Silahkan Pilih Baris Telebih Dahulu' });
        }
    }
</script>

@section RightToolbar{
    <div class="d-flex align-items-center">
        <!--begin::Actions-->
        @{
            if (ViewBag.Edit)
            {
                <a class="btn btn-light-primary font-weight-bolder btn-sm mr-2" href="javascript:Edit();"><span class="image fa fa-edit"></span> Edit</a>
            }
        }
        <!--end::Actions-->
    </div>
}

<div class="card card-default">
    <div>
        @Html.AntiForgeryToken()

        @(Html.DevExtreme().DataGrid()
            .ID("grid1")
            .DataSource(d => d.Mvc()
                .Controller("Glossary")
                .LoadAction("GetGridData")
                .Key("GloId"))
            .RemoteOperations(true)
            .Width("100%")
            .Columns(columns =>
            {
                columns.Add().DataField("GloId").Visible(false);
                columns.Add().DataField("NAMA_ALERT").Caption("Nama Alert");
                columns.Add().DataField("GloPIdeb").Caption("Permintaan IDeb");
                columns.Add().DataField("GloKetNilai1").Caption("Keterangan Jumlah Permintaan");
                columns.Add().DataField("GloKetNilaiRata2").Caption("Keterangan Nilai Rata-rata");
            })
            .FilterRow(f => f.Visible(true))
            .ShowBorders(false)
            .Selection(c => c.Mode(SelectionMode.Single))
            .RowAlternationEnabled(false)
            .Paging(p =>
            {
                p.PageSize(20);
                p.Enabled(true);
            })
            .Pager(p =>
            {
                p.ShowInfo(true);
            }))
    </div>
</div>