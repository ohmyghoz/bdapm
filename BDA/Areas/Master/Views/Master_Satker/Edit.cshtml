@model BDA.DataModel.MasterSatker
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card card-default">
        <div class="card-header separator">
            <div class="card-title">
                <script>document.write(pageTitle);</script>
            </div>
            <div class="card-controls">
                <a href="@Url.Action("Index")"><i class="fa fa-arrow-left"></i> Kembali Ke Daftar</a>
            </div>
        </div>

        <div class="card-block m-t-10">
            <div class="row">
                <securehidden asp-for="SatkerId"></securehidden>
                <div class="col-lg-6 form-group">
                    <label asp-for="SatkerKode"></label>
                    @Html.DevExtreme().TextBoxFor(m => m.SatkerKode).Width("100%")
                </div>
                <div class="col-lg-6 form-group">
                    <label asp-for="SatkerTipe"></label>
                    @Html.DevExtreme().TextBoxFor(m => m.SatkerTipe).Width("100%")
                </div>
                <div class="col-lg-6 form-group">
                    <label asp-for="SatkerParentId"></label>
                    @(Html.DevExtreme().SelectBoxFor(m => m.SatkerParentId)
                        .DataSource(d => d.Mvc().Controller("Master_Satker").LoadAction("GetRefklas_parent_id").Key("SatkerId"))
                        .DisplayExpr("SatkerKode")
                        .ValueExpr("SatkerId")
                        .Width("100%")
                    )
                </div>
                <div class="col-lg-6 form-group">
                    <label asp-for="RefKotaId"></label>
                    @(Html.DevExtreme().SelectBoxFor(m => m.RefKotaId)
                        .DataSource(d => d.Mvc().Controller("Master_Satker").LoadAction("GetRef_kota_id").Key("RefKotaId"))
                        .DisplayExpr("RefKotaNama")
                        .ValueExpr("RefKotaId")
                        .Width("100%")
                    )
                </div>

            </div>
            @Html.DevExtreme().Button().ID("btnSave").Text("Simpan").UseSubmitBehavior(true)
        </div>
    </div>
}