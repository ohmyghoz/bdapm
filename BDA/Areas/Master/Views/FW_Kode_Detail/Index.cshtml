@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<script type="text/javascript">
    function Edit() {
        var keys = $("#grid1").dxDataGrid("getSelectedRowKeys");
        if (keys.length >= 1) {
            window.location = "@Url.Action("Edit","FW_Kode_Detail")/" + keys[0].toString();
        } else {
            alert('Silahkan Pilih Baris Telebih Dahulu');
        }
    }
    function Delete() {
        var keys = $("#grid1").dxDataGrid("getSelectedRowKeys");
        if (keys.length >= 1) {
            var ask = confirm('Apakah Anda yakin akan menghapus data ini ?');
            if (ask) {
                $.ajax({
					type: "POST",
					url: "@Url.Action("Delete","FW_Kode_Detail")?handler=Delete",
					contentType: "application/x-www-form-urlencoded;charset=UTF-8",
                    dataType: "json",
                    data: "param1=" + keys[0].toString(),
                    success: function (response) {
                        alert(response);
                        $("#grid1").dxDataGrid("refresh");
                    },
                    error: function (response) {
                        alert(response.responseJSON.error);
                    }
				});
            }
        } else {
            alert('Silahkan Pilih Baris Telebih Dahulu');
        }
    }
</script>


<div class="card card-default">
    <div class="card-header">
        <script>document.write(pageTitle);</script>
        <div class="pull-right">
            <nav class="dxbs-menu clearfix">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Create","FW_Kode_Detail")"><span class="image fa fa-plus"></span> Add</a></li>
                    <li class="nav-item"><a class="nav-link" href="javascript:Edit();"><span class="image fa fa-edit"></span> Edit</a></li>
                    <li class="nav-item"><a class="nav-link" href="javascript:Delete();"><span class="image fa fa-times"></span> Delete</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="gridview-div">
        @Html.AntiForgeryToken()

        @(Html.DevExtreme().DataGrid()
            .ID("grid1")
            .DataSource(d => d.Mvc()
                .Controller("FW_Kode_Detail")
                .LoadAction("GetGridData")
                //.InsertAction("InsertObject")
                //.UpdateAction("UpdateObject")
                //.DeleteAction("DeleteObject")
                .Key("kod_id")
            )
            .Width("100%")
            .RemoteOperations(true)
            .Columns(columns =>
            {
                columns.Add().DataField("kod_tipe").Width("100px").Caption("Tipe");
columns.Add().DataField("KodUrut").Width("100px").Caption("Urut");
columns.Add().DataField("KodLength").Width("100px").Caption("Length");
columns.Add().DataField("KodCatatan").Width("200px").Caption("Catatan");
columns.Add().DataField("KodChar").Width("140px").Caption("Char");
columns.Add().DataField("KodParamKode").Width("140px").Caption("Param Kode");
columns.Add().DataField("KodParamAsCounter").Width("100px").Caption("Param As Counter");
columns.Add().DataField("KodId").Visible(false);

            })
            .FilterRow(f => f.Visible(true))
            .ShowBorders(false)
            .Selection(c => c.Mode(SelectionMode.Single))
            .RowAlternationEnabled(false)
            .Paging(p =>
                    {
                p.PageSize(20);
                p.Enabled(true);
                }
            )
        )

    </div>
</div>
