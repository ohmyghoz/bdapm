<script type="text/javascript">
    function Detail() {
        var keys = $("#grid1").dxDataGrid("getSelectedRowsData");
        if (keys.length >= 1) {
            @*window.open("@Url.Action("Detail", "UserPermintaan")/" + keys[0].toString());*@
            $.ajax({
                type: "POST",
                url: "@Url.Action("Detail", "SLIK")",
                data: {
                    memberType: keys[0].MEMBER_TYPE_CODE,
                    member: keys[0].MEMBER_CODE,
                    kodeAlert: keys[0].KODE_ALERT
                },
                success: function (response) {
                    if (response.result == "Redirect") {
                        window.open(response.url, "_blank");
                    } else {
                        swal({
                            type: 'error',
                            title: 'Oops...',
                            text: 'Terjadi kesalahan. Silahkan coba beberapa saat lagi.'
                        });
                    }
                }
            });
        } else {
            swal({ type: 'error', title: 'Oops...', text: 'Silahkan Pilih Baris Telebih Dahulu' });
        }
    }

    function ExportToExcel() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("LogExportIndex", "SLIK")",
            success: function (response) {
                if (response.result == "Success") {
                    var grid = $("#grid1").dxDataGrid("instance");
                    grid.option("onFileSaving", function (e) { });
                    grid.exportToExcel();
                }
            }
        });
    }

    function ExportToPdf() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("LogExportIndex", "SLIK")",
            success: function (response) {
                if (response.result == "Success") {
                    const doc = new jsPDF({
                        orientation: "landscape",
                        unit: "cm",
                        format: [21, 60]
                    });
                    var dataGrid = $("#grid1").dxDataGrid("instance");
                    var fileName = "AlertSLIK_" + new Date().toISOString().slice(0, 10) + ".pdf";
                    doc.setFontSize("6")
                    //var keys = $("#grid1").dxDataGrid("getSelectedRowsData")
                    //console.log(keys)
                    DevExpress.pdfExporter.exportDataGrid({
                        jsPDFDocument: doc,
                        component: dataGrid,
                        keepColumnWidths: true
                        //selectedRowsOnly: true
                    }).then(function () {
                        doc.save(fileName);
                    });
                }
            }
        });
    }

    function ExportToPdf2() {
        var dataGrid = $("#grid1").dxDataGrid("instance");
        dataGrid.option("onFileSaving", function (e) {
            var fd = new FormData();
            fd.append("file", e.data);
            $.ajax({
                type: "POST",
                url: "@Url.Action("ExportPDF", "SLIK")",
                data: fd,
                processData: false,
                contentType: false
            }).done(function (data) {
                window.location = "@Url.Action("File", "SLIK")"
            });
            e.cancel = true;
        });

        dataGrid.exportToExcel();
    }
</script>

@using (Html.BeginForm())
